// MecaMath.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
using namespace std;
class Entrada;
class Par_Impar 
{
private:
	double impar[3];
	double par[3];
public:
	void separar(Entrada Obj);
	friend class Entrada;
};

void Par_Impar :: separar(Entrada Obj)
{
	int i, p, z;
	for (i = 0; i < 6; i++)
	{
		if (Obj.x[i] % 2 == 0) 
		{
			for (p = 0; p < 3; p++)
			{
				par[p] = Obj.x[i];
			}
		}
		else
		{
			for (z = 0; z < 3; z++)
			{
				impar[z] = Obj.x[i];
			}
		}
	}
	
	for (i = 0; i < 3; i++)
	{
		cout << impar[i] << endl;
		cout << par[i] << endl;
	}
}

class Entrada
{
private:
	double x[6];
public:
	void getNum();
	friend class Par_Impar;
};

void Entrada ::  getNum()
{
	int i;
	cout << "Entre com os valores:" << endl;
	for (i = 0; i < 6; i++)
	{
		cout << "Numero " << i+1 << ":" << endl;
		cin >> x[i];
	}
}


int main()
{
	cout << "MecaMath" << endl;
	Entrada Obj1;
	Obj1.getNum();
	Par_Impar Obj2;
	Obj2.separar(Obj1);
	system("pause");
	return 0;
}
